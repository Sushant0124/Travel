<% layout("/layouts/boilerplate.ejs")%>
<body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <%for(let list of listings){%>
        <a class="listing-link" href="/listings/<%=list._id%>">
    <div class="card " style="width: 20rem;">
        <img src="<%=list.image%>" class="card-img-top" alt="List_image" >
        <div class="card-img-overlay">Description</div>
        <div class="card-body ">
          <h5 class="card-title"><%=list.title%></h5>
          <p class="card-text"><%=list.description%><br>
            &#8377;<%=list.price.toLocaleString("en-IN")%>
        </p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    </a>
      <%}%>  
    </div>
  
    
</body>
